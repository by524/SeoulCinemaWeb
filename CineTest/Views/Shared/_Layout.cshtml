<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <title>@ViewBag.Title - Seoul Cinema</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @{var isLogin = @ViewData["isLogin"];}
</head>
<body >
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Seoul Cinema", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("예매", "Contact", "Home")</li>
                    

                </ul>

                <ul class="nav navbar-nav navbar-right">
                    
                     <li><h3>@ViewData["id"] 님</h3></li>
                     <li>@Html.ActionLink("로그인", "Login", "Home")</li>
                     <li>@Html.ActionLink("회원가입", "Register", "Home")</li>
                     
                </ul>
            </div>
            

        </div>
    </div>
    
    <div class="examplethree">
        @RenderBody()

        
        
    </div>
   
    <footer>
        <p>&copy; @DateTime.Now.Year - Database 설계</p>
        <p>대표:장보영,신권철,김용민</p>
    </footer>
    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
